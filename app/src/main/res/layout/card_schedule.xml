<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card"
    android:gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="@drawable/layout"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:textColor="@color/cardColor"
            android:textAlignment="center"
            android:padding="4dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="Senin"
            android:id="@+id/nama_hari"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workshop Aplikasi Mobile"
            android:id="@+id/nama_matkul"
            android:textColor="@color/miniTitle"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:src="@drawable/ic_map"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workshop Komputasi Sistem Informasi"
                android:textAllCaps="true"
                android:id="@+id/ruangan"
                android:textColor="@color/darkTextColor"
                android:textSize="12dp"
                android:maxLines="3"/>
        </LinearLayout>
